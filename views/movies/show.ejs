<%- include('../partials/header1.ejs') %>

<link rel="stylesheet" href="../stylesheets/show.css">


<div class="md-head">
    <div class="md-head-container">
        <div class="md-head-left">
            <div class="md-head-logo">
                <img src="<%= movie.image %>" class="img-logo">
            </div>
            <div class="md-head-detail">
                <ul>
                    <p class="name-movie"><%= movie.name%></p>
                    <li class="li-detail"><img src="https://www.majorcineplex.com/public/desktop_new_assets/img/icon-time.svg"
                            class="bshn-icon-desc"><%= movie.time %></li>
                    <li class="li-detail"><img src="https://www.majorcineplex.com/public/desktop_new_assets/img/icon-tag.svg"
                            class="bshn-icon-desc"><%= movie.genre %></li>
                    <li class="li-detail"><img src="https://www.majorcineplex.com/public/desktop_new_assets/img/icon-date.svg"
                            class="bshn-icon-desc"><%= movie.date %></li>
                    <li class="li-detail">
                        ACTORS: <%= movie.actors %>
                    </li>
                </ul>
            </div>
        </div>
        <div class="md-head-trailer">
            <div class="trailerVdo">
                <iframe class="iframe-trailer" src="<%= movie.trailer %>"
                    title="YouTube video player" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </div>
        </div>
        <div class="fav-and-buy">
            <!-- <div class="fav">
                <img src="https://www.majorcineplex.com/public/desktop_new_assets/img/icon-favorite.svg">
            </div> -->
            <% if(!currentUser) { %>
                <form action="/login" method="POST">
                    <button type="submit" class="fav-none-login"><i class="far fa-heart" id="like"></i></button>
                </form>
            <% } else { %>
            <div class="container-fluid mt-3" style="height: 50px;">
                <!-- function for check that user like or not -->
                <% var match = 0; var lid = ''; %>
                <% currentUser.likes.forEach(function(liked){ if ( liked.movies.id == movie.id ) { match = 1; lid = liked._id; } }); %>
                <% if( match == 1 ) { %>
                    <form action="/movie/<%= lid %>/unlike" method="POST">
                        <button type="submit" class="fav"><i class="fa fa-heart" id="unlike"></i></button>
                    </form>
                <% } else { %>
                    <form action="/movie/<%= movie._id %>/like" method="POST">
                        <button type="submit" class="fav"><i class="far fa-heart" id="like"></i></button>
                    </form>
                <% } %>
            </div>
            <% } %>
            <div class="buy">
                <button class="btn-buy">BUY TICKET!</button>
            </div>
        </div>
    </div>
</div>

<div class="about-review">
    <h1>Rating & Review</h1>
    <% movie.comments.forEach(function(comment){ %>
    <p>
        <strong><%= comment.author.username %>:</strong> <%= comment.text %>
    </p>    
    <% }); %>
    
</div>

<div class='container'>
    <form action='/movie/<%= movie._id %>/comments' method='POST'>
        <h5 class="h5">Write your review here!</h5>
        <div class="cover-inp">
          <input type="text" placeholder="Your comment" class="comment-detail" name='comment[text]'>
          <input type="submit" value="comment" class="submit-comment">
        </div>
      </form>
</div>



<%- include('../partials/footer.ejs') %>