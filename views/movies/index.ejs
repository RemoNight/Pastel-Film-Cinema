        <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                data-bs-toggle="dropdown" aria-expanded="false">
                <% if ( sort == 'All' ) {  %>
                    &ensp; Genre
                <% } else {  %>
                    &ensp; Sort by : <%= sort %>
                <% } %>
            </a>

            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item" href="/movie">All Movies</a></li>
                <li><a class="dropdown-item" href="/movie/genre-coming/Action">Action</a></li>
                <li><a class="dropdown-item" href="/movie/genre-coming/Adventure">Adventure</a></li>
                <li><a class="dropdown-item" href="/movie/genre-coming/Drama">Drama</a></li>
                <li><a class="dropdown-item" href="/movie/genre-coming/Horror">Horror</a></li>
                <li><a class="dropdown-item" href="/movie/genre-coming/Fantasy">Fantasy</a></li>
                <li><a class="dropdown-item" href="/movie/genre-coming/Sci-fi">Sci-Fi</a></li>
            </ul>

            <% if( currentUser && currentUser.isAdmin ) { %>
                <a href="/movie/new"><button type="button" class="btn btn-outline" style="color: white; margin: 0 auto; margin-top: -3%; margin-left: 2%;">Add new movies</button></a>
            <% } %>

        </div>
        
        <div class="album py-5">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
                    <% coming.forEach(function(movie){ %>
                        <div class="col col-1">
                            <a href="/movie/<%= movie._id %>" class="detail">
                                <div class="card " style="width: 16rem;">
                                    <img src="<%= movie.image %>" class="card-img-top" style="height: 23rem;">
                                    <div class="card-body">
