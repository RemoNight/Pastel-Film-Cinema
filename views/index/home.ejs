<%- include('../partials/header1.ejs') %>



<link rel="stylesheet" href="stylesheets/home.css">


<script src="../javascript/home.js" defer></script>
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
            aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
            aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
            aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://i.ytimg.com/vi/B5fH93cEy5g/maxresdefault.jpg" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="https://i2.wp.com/www.irishfilmcritic.com/wp-content/uploads/2020/12/Nobody.jpg?resize=1392%2C696&ssl=1"
                class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="https://mpics.mgronline.com/pics/Images/563000007253301.JPEG" class="d-block w-100">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<div class="header-movie-home">
    <h1 class="home-movie">MOVIES <i class="fas fa-film"></i></h1>
    <button onclick="onClick_Recommend()" class="heading-movie" id="recommend">RECOMMEND</button>
    <button onclick="onClick_Showing()" class="heading-movie" id="now-showing">NOW SHOWING</button>
    <button onclick="onClick_Coming()" class="heading-movie" id="coming-soon">COMING SOON</button>
    <hr class="line-heading-movie">
</div>

<div id="movie-recommend">
    <div class="rank-1"><p class="rank">TOP 3 OF THE WEEK</p></div>
    <div class="album py-5">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
                <% var i = 1; ranks.forEach(function(movie){  %>
                <div class="col col-1">
                    <a href="/movie/<%= movie._id %>" class="detail">
                        <div class="card " style="width: 16rem;">
                            <img src="<%= movie.image %>"
                                class="card-img-top" style="height: 23rem;">
                            <div class="card-body">
                                <h5 class="card-title"><%= movie.name %></h5>
                                <p class="card-text"><%= movie.date %></p>
                            </div>
                        </div>
                    </a>
                    <p class="num"><%= i %></p>
                </div>
                <% i++; }); %>
            </div>
        </div>
    </div>
</div> 


<div id="movie-showing">
    <div class="album py-5">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
                <% showing.forEach(function(movie){  %>
                <div class="col">
                    <a href="/movie/<%= movie._id %>" class="detail">
                        <div class="card " style="width: 16rem;">
                            <img src="<%= movie.image %>"
                                class="card-img-top" style="height: 23rem;">
                            <div class="card-body">
                                <h5 class="card-title"><%= movie.name %></h5>
                                <p class="card-text"><%= movie.date %></p>
                            </div>

                            <div class="hide" style="background-color:  rgba(0, 0, 0, 0.7);position: absolute;color:rgb(207, 87, 87) ;width:15.9rem;height: 23rem;"> 
                                <p class="name-movie"><%= movie.name %></p>
                                <p class="p-detail"><img
                                    src="https://www.majorcineplex.com/public/desktop_new_assets/img/icon-time.svg"
                                    class="bshn-icon-desc">
                                    <%= movie.time %>
                                </p>

                                <p class="p-detail"><img
                                    src="https://www.majorcineplex.com/public/desktop_new_assets/img/icon-tag.svg"
                                    class="bshn-icon-desc">
                                    <%= movie.genre %>
                                </p>

                                <p class="p-detail"><img
                                    src="https://www.majorcineplex.com/public/desktop_new_assets/img/icon-date.svg"
                                    class="bshn-icon-desc">
                                    <%= movie.date %>
                                </p>

                                <p class="p-detail">ACTORS: <%= movie.actors %></p>
                                
                            </div>
                        </div>
                    </a>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div> 


<div id="movie-coming">
    <div class="album py-5">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
                <% coming.forEach(function(movie){  %>
                <div class="col">
                    <a href="/movie/<%= movie._id %>" class="detail">
                        <div class="card " style="width: 16rem;">
                            <img src="<%= movie.image %>"
                                class="card-img-top" style="height: 23rem;">
                            <div class="card-body">
                                <h5 class="card-title"><%= movie.name %></h5>
                                <p class="card-text"><%= movie.date %></p>
                            </div>

                            <div class="hide" style="background-color:  rgba(0, 0, 0, 0.7);position: absolute;color:rgb(207, 87, 87) ;width:15.9rem;height: 23rem;"> 
                                <p class="name-movie"><%= movie.name %></p>
                                <p class="p-detail"><img
                                    src="https://www.majorcineplex.com/public/desktop_new_assets/img/icon-time.svg"
                                    class="bshn-icon-desc">
                                    <%= movie.time %>
                                </p>

                                <p class="p-detail"><img
                                    src="https://www.majorcineplex.com/public/desktop_new_assets/img/icon-tag.svg"
                                    class="bshn-icon-desc">
                                    <%= movie.genre %>
                                </p>

                                <p class="p-detail"><img
                                    src="https://www.majorcineplex.com/public/desktop_new_assets/img/icon-date.svg"
                                    class="bshn-icon-desc">
                                    <%= movie.date %>
                                </p>

                                <p class="p-detail">ACTORS: <%= movie.actors %></p>
                                
                            </div>
                        </div>

                        
                    </a>

                   
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div> 


