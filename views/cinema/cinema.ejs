<%- include('../partials/header1.ejs') %>


<link rel="stylesheet" href="stylesheets/cinema.css">


    <script src="cinema.js" defer></script>
    <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="http://www.engtest.net/UserFiles/Image/25782572575785785757575/cinema-Maroc.jpg" class="d-block w-100" alt="NMovie">
          <div class="carousel-caption d-none d-md-block">
            <h5>First slide label</h5>
            <p>Some representative placeholder content for the first slide.</p>
          </div>
        </div>
    </div>

    <div>
        <h1 class="h1">LOCATION</h1>
        <button onclick="onClick_Bangkok()" class="heading-movie" id="bkk">BANGKOK</button>
        <button onclick="onClick_Central()" class="heading-movie" id="cen">CENTRAL</button>
        <hr class="line-heading-movie">
    </div>



    <div id="bangkok">
        <div class="album py-5">
            <div class="container">
                <div class="row row-cols-2 row-cols-sm-2 row-cols-md-4 g-3">
                    <!-- <% var i = 0; %> -->
                    <% Bangkok.forEach(function(cinema){ %>
                        <div class="col">
                            <a href="/cinema/<%= cinema._id %>" class="detail">
                                <!-- <img src="<%= cinema.image %>" width="100%" height="250px" style="object-fit: cover;"> -->
                                <div class="card " style="width: 16rem;">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= cinema.name %></h5>
                                        <p class="card-text">Tel. 1349</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div> 


    <div id="central">
        <div class="album py-5">
            <div class="container">
                <div class="row row-cols-2 row-cols-sm-2 row-cols-md-4 g-3">
                    <!-- <% var i = 0; %> -->
                    <% Central.forEach(function(cinema){ %>
                        <div class="col">
                            <a href="/cinema/<%= cinema._id %>" class="detail">
                                <!-- <img src="<%= cinema.image %>" width="100%" height="250px" style="object-fit: cover;"> -->
                                <div class="card " style="width: 16rem;">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= cinema.name %></h5>
                                        <p class="card-text">Tel. 1349</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div> 





<%- include('../partials/footer.ejs') %>