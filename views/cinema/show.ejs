<%- include('../partials/header1.ejs') %>

<link rel="stylesheet" href="/stylesheets/home.css">

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <img src="<%= Cinemas.image %>" width="850" height="450">
        </div>
        <div class="col pt-5 text-center">
            <ul style="list-style-type: none; color: white;">
                <div class="container-fluid" style="height: 220px;">
                    <li class="mt-3 mb-5"><img src="<%= Cinemas.logo %>" width="350px" height="200px" style="object-fit: contain;"></li>
                </div>
                <div class="container-fluid" style="height: 150px;">
                    <li><h5><%= Cinemas.slogan %></h5></li>
                </div>
                
                <% if ( !currentUser ) { %>
                <% } else if ( currentUser.status === 'admin' || currentUser.status === 'boss' ) { %>
                    <div style="display: flex;">
                        <a href="/cinema/<%= Cinemas._id %>/edit"><button class="btn btn-primary btn-edit">EDIT &nbsp;<i class="far fa-edit"></i></button></a>
                        <form action="/cinema/<%= Cinemas._id %>?_method=DELETE" method="POST">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary btn-delete" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                DELETE &nbsp;<i class="fa fa-trash"></i>
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="deleteModal" data-bs-backdrop="static" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">DELETE CINEMA</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Do you want to delete this cinema ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Confirm</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                <% } %>
            </ul>
        </div>
    </div>

    <div class="container-fluid"></div>
</div>

<!-- Now showing -->
<!-- Banner -->
<div class="container-fluid bg-dark px-3 pt-4" style="height: 75px;">
    <h5 style="color: white; text-transform: uppercase;">
        &emsp;
        <span class="dot" style="background-color: rgb(255, 0, 0); margin-bottom: 1px;"></span>
      Now showing
    </h5>
</div>
<!-- End of Banner -->

<!-- Poster -->

<div class="album py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
            <% Movies.forEach(function(movie){  %>
                <div class="col">
                    <a href="/showtime/<%= Cinemas._id %>/<%= movie._id %>" class="detail">
                        <div class="card " style="width: 16rem;">
                            <img src="<%= movie.image %>"
                                class="card-img-top" style="height: 23rem;">
                            <div class="card-body">
                                <h5 class="card-title"><%= movie.name %></h5>
                                <p class="card-text"><%= movie.date %></p>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </div>
</div>


<%- include('../partials/footer.ejs') %>