<%- include('../partials/header1.ejs') %>

    <% User.forEach(function(user){ %>
        <div style="width: 100%; padding-left: 400px; padding-right: 400px;">
            <div class="card card-cover text-white bg-dark rounded-5 shadow-lg">
                <div class="row">
                    <img class="col-3" src="<%= user.image %>" width="150px" height="150px">
                    <h5 class="mt-3 mx-3 col" style="color: white; text-transform: uppercase;">
                        <% if ( !user.isAdmin ) { %>
                            <p class="mt-3" style="color: green;">priority : USER</p>
                        <% } %>

                            <div class="text-end mt-2">
                                <form action="/user/admin/grant/<%= user._id %>" method="POST">

                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-outline-light" style="width: 200px"
                                        data-bs-toggle="modal" data-bs-target="#exampleModal">Make Admin</button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Make Admin</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Save
                                                        changes</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                &nbsp;
                                <form action="/user/admin/delete/<%= user._id %>" method="POST">

                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-outline-light" style="width: 200px"
                                        data-bs-toggle="modal" data-bs-target="#exampleModal">Delete
                                        Account</button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Make Admin</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Save
                                                        changes</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                    </h5>
                </div>
            </div>
        </div>
        &ebsp;
    <% }); %>

<%- include('../partials/footer.ejs') %>